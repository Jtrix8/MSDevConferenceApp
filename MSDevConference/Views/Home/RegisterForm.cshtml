@model WebinarInvites
@{
    ViewData["Title"] = "RegisterForm";
}

<h3>Welcome to Registration</h3>

<h5 class="bg-primary text-white text-center m-2 p-2">Registration Form</h5>

<form asp-action="RegisterForm" method="post" class="m-2">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Name">Enter Your Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Enter Your Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Enter Your Phone Number</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="WillJoin">Will You Join?</label>
        <select asp-for="WillJoin" class="form-control">
            <option value="">Select an option: </option>
            <option value="true">Yes, I will join.</option>
            <option value="false">No, I will not join.</option>
        </select>
    </div>
    
    <button type="submit" class="btn btn-primary">Submit Registration</button>
</form>